<html lang="en">
    <head>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
              crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                crossorigin="anonymous"></script>
        <title>SNSHook</title>
    </head>
    <body>
        <%= erb(:_toaster, locals: { message: flash[:error], type: 'error' }) %>
        <%= erb(:_toaster, locals: { message: flash[:success], type: 'success' }) %>
        <%= erb(:_toaster, locals: { message: flash[:warning], type: 'alert' }) %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">SNS Hook</a>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link <%= active_class_for('/sns') %>" aria-current="page" href="/sns">Home</a>
                        <a class="nav-link <%= active_class_for('/sns/topics') %>" aria-current="page" href="/sns/topics">Topics</a>
                        <a class="nav-link <%= active_class_for('/sns/subscriptions') %>" href="/sns/subscriptions">Subscriptions</a>
                    </div>
                </div>
            </div>
        </nav>
        <main class="container">
            <%= yield %>
        </main>
        <script type="text/javascript">
         function showToast(errorClass) {
             var ele = document.querySelector('.toast.' + (errorClass || 'success'));
             if(ele && ele.textContent.trim()) {
                 var toast = new bootstrap.Toast(ele);
                 toast.show();
             }
         }
         showToast('success');
         showToast('error');
         showToast('alert');
        </script>
    </body>
</html>
